rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 公開読み取り許可（音声ファイル配信用）
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false; // WordPress側からのみアップロード
    }
    
    // podcast フォルダ配下は認証済みユーザーのみ書き込み可能
    match /podcast/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
